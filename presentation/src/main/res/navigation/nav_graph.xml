<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/breakingNewsFragment">

    <keep_state_fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.example.newsappcleanarch.ui.break.BreakingNewsFragment"
        android:label="BreakingNewsFragment"
        tools:layout="@layout/fragment_breaking_news">
        <action
            android:id="@+id/action_breakingNewsFragment_to_articleNewsFragment"
            app:destination="@id/articleNewsFragment"/>
    </keep_state_fragment>


    <keep_state_fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.example.newsappcleanarch.ui.save.SavedNewsFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_saved_news" >
        <action
            android:id="@+id/action_savedNewsFragment_to_articleNewsFragment"
            app:destination="@id/articleNewsFragment" />
    </keep_state_fragment>


    <keep_state_fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.example.newsappcleanarch.ui.search.SearchNewsFragment"
        android:label="fragment_search_news"
        tools:layout="@layout/fragment_search_news" >
        <action
            android:id="@+id/action_searchNewsFragment_to_articleNewsFragment"
            app:destination="@id/articleNewsFragment" />
    </keep_state_fragment>


    <keep_state_fragment
        android:id="@+id/articleNewsFragment"
        android:name="com.example.newsappcleanarch.ui.article.ArticleNewsFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" />


</navigation>